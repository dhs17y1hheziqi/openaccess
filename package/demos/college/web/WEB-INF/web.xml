<?xml version="1.0"?>

<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN"
    "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">

<web-app>
    <!-- Configure servlet filter to close PM after each request. -->
    <filter>
        <filter-name>util.PMFilter</filter-name>
        <filter-class>util.PMFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>util.PMFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>
