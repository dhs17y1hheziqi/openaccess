<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<entity-mappings>
    <package>com.acme</package>
    <default-access>PROPERTY</default-access>
    <default-cascade>ALL</default-cascade>
    <entity>
        <class-name>com.acme.Invoice</class-name>
        <id>
            <attribute>id</attribute>
            <generate>AUTO</generate>
        </id>
        <version>
            <attribute>version</attribute>
        </version>
    </entity>
    <entity>
        <class-name>com.acme.WholesaleCustomer</class-name>
        <primary-key-join-column>
            <name>WS_CUST_ID</name>
            <referenced-column-name>id</referenced-column-name>
        </primary-key-join-column>
        <access>FIELD</access>
        <table>
            <name>WS_CUST</name>
            <schema>RECORDS</schema>
        </table>
        <basic>
            <attribute>terms</attribute>
        </basic>
    </entity>
    <entity>
        <class-name>com.acme.Customer</class-name>
        <inheritance-strategy>JOINED</inheritance-strategy>
        <discriminator-type>INTEGER</discriminator-type>
        <discriminator-value>TYPE</discriminator-value>
        <access>FIELD</access>
        <table>
            <name>CUSTOMER</name>
            <schema>RECORDS</schema>
        </table>
        <secondary-table>
            <name>CUSTOMER_DETAIL</name>
            <primary-key-join-column>
                <name>CUSTOMER_ID</name>
            </primary-key-join-column>
        </secondary-table>
        <id>
            <attribute>id</attribute>
            <generate>SEQUENCE</generate>
            <column>
                <name>CUSTOMER_ID</name>
            </column>
        </id>
        <basic>
            <attribute>description</attribute>
            <column>
                <name>CUSTOMER_DESC</name>
                <column-definition>CLOB</column-definition>
            </column>
        </basic>
        <one-to-many>
            <attribute>orders</attribute>
            <target-entity>com.acme.PurchaseOrder</target-entity>
            <fetch>EAGER</fetch>
            <mapped-by>customer</mapped-by>
        </one-to-many>
        <many-to-many>
            <attribute>serviceOptions</attribute>
            <mapped-by>customers</mapped-by>
        </many-to-many>
        <many-to-one>
            <attribute>address</attribute>
	    	<cascade>ALL</cascade>
        </many-to-one>
    </entity>
    <entity>
        <class-name>com.acme.Address</class-name>
        <table>
            <name>ADDRESS</name>
            <schema>RECORDS</schema>
        </table>
        <id>
            <attribute>id</attribute>
            <generate>AUTO</generate>
            <column>
                <name>ADDRESS_ID</name>
            </column>
        </id>
        <version>
            <attribute>version</attribute>
        </version>
    </entity>
    <entity>
        <class-name>com.acme.PurchaseOrder</class-name>
        <table>
            <name>ORDER_TABLE</name>
            <schema>RECORDS</schema>
        </table>
        <id>
            <attribute>id</attribute>
            <generate>AUTO</generate>
        </id>
        <version>
            <attribute>version</attribute>
        </version>
        <many-to-one>
            <attribute>customer</attribute>
        </many-to-one>
    </entity>
    <entity>
        <class-name>com.acme.DeliveryService</class-name>
        <table>
            <name>DLVRY_SVC</name>
            <schema>RECORDS</schema>
        </table>
        <id>
            <attribute>serviceName</attribute>
            <generate>AUTO</generate>
        </id>
        <many-to-many>
            <attribute>customers</attribute>
            <target-entity>com.acme.Customer</target-entity>
            <join-table>
                <name>CUST_DLVRY</name>
                <schema></schema>
                <catalog></catalog>
                <inverse-join-column>
                    <name>CUST_ID</name>
                </inverse-join-column>
                <join-column>
                    <name>DLVRY_ID</name>
                </join-column>
            </join-table>
        </many-to-many>
    </entity>
</entity-mappings>
